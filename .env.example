# NeuroMarketing GPT Platform Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API KEYS
# =============================================================================
# OpenAI API Key for enhanced sentiment analysis (optional)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Debug mode (true/false)
DEBUG=true

# Logging level (debug, info, warning, error)
LOG_LEVEL=info

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=1000

# Maximum message size in MB
MAX_MESSAGE_SIZE=1000

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# Enable caching (true/false)
ENABLE_CACHING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable advanced features requiring API keys
ENABLE_ADVANCED_FEATURES=true

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable real-time monitoring
ENABLE_MONITORING=true

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================
# Database URL (if using external database)
# Examples:
# SQLite: sqlite:///./neuromarketing.db
# PostgreSQL: postgresql://user:password@localhost:5432/neuromarketing
# MySQL: mysql://user:password@localhost:3306/neuromarketing
DATABASE_URL=sqlite:///./neuromarketing.db

# PostgreSQL specific settings (if using PostgreSQL)
POSTGRES_USER=neurouser
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=neuromarketing
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# Redis password (if authentication is enabled)
REDIS_PASSWORD=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for session management
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Monitoring and error tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics (Google Analytics, etc.)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# =============================================================================
# RESEARCH API SETTINGS
# =============================================================================
# Timeout for external API calls (seconds)
API_TIMEOUT=30

# Maximum retries for failed API calls
API_MAX_RETRIES=3

# Rate limiting (requests per minute)
API_RATE_LIMIT=60

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8501

# SSL settings (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
# File storage path
STORAGE_PATH=./data

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Cloud storage (AWS S3, Google Cloud, Azure)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log file path
LOG_FILE_PATH=./logs/neuromarketing.log

# Log rotation settings
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Metrics collection
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable hot reload in development
HOT_RELOAD=true

# Show debug toolbar
DEBUG_TOOLBAR=true

# Profiling enabled
PROFILING_ENABLED=false

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Test database URL
TEST_DATABASE_URL=sqlite:///./test_neuromarketing.db

# Test data directory
TEST_DATA_PATH=./tests/data

# Mock external APIs in tests
MOCK_EXTERNAL_APIS=true
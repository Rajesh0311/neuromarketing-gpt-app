# Environment Configuration for NeuroMarketing GPT Platform
# Copy this file to .env and update with your actual values

# =============================================================================
# API KEYS (Optional - Platform works without these)
# =============================================================================

# OpenAI API Key (for enhanced AI-powered analysis)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Canva API Key (for advanced visual generation)
# CANVA_API_KEY=your-canva-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application mode (development, production)
NEURO_PLATFORM_MODE=production

# Enable advanced features
ENABLE_ADVANCED_FEATURES=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# File upload settings
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200

# Theme settings
STREAMLIT_THEME_PRIMARY_COLOR=#667eea
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache settings
CACHE_TIMEOUT=3600
ENABLE_CACHING=true
CACHE_MAX_SIZE=1000

# Concurrent users
MAX_CONCURRENT_USERS=100
MAX_SESSIONS=500

# Memory settings
MAX_MEMORY_USAGE_GB=4
ENABLE_MEMORY_OPTIMIZATION=true

# Processing timeouts
ANALYSIS_TIMEOUT=30
SIMULATION_TIMEOUT=60
RESEARCH_TIMEOUT=120

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting
ENABLE_API_RATE_LIMITING=true
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Session settings
SESSION_TIMEOUT=3600
ENABLE_SESSION_ENCRYPTION=true

# Input validation
ENABLE_INPUT_SANITIZATION=true
MAX_TEXT_INPUT_LENGTH=10000
MAX_FILE_SIZE_MB=50

# CORS settings
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=*

# =============================================================================
# DATA SOURCE SETTINGS
# =============================================================================

# Research database timeouts
OPENNEURO_TIMEOUT=30
ZENODO_TIMEOUT=30
PHYSIONET_TIMEOUT=30
IEEE_DATAPORT_TIMEOUT=30
PUBMED_TIMEOUT=30

# Request retries
MAX_API_RETRIES=3
RETRY_DELAY_SECONDS=1

# =============================================================================
# EXPORT SETTINGS
# =============================================================================

# Export formats
ENABLE_PDF_EXPORT=true
ENABLE_DOCX_EXPORT=true
ENABLE_HTML_EXPORT=true
ENABLE_JSON_EXPORT=true
ENABLE_CSV_EXPORT=true

# Export limits
MAX_EXPORT_SIZE_MB=100
EXPORT_TIMEOUT=60

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Error tracking
ENABLE_ERROR_TRACKING=true
ERROR_REPORTING_ENDPOINT=

# Usage analytics
ENABLE_USAGE_ANALYTICS=false
ANALYTICS_ENDPOINT=

# Health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300

# =============================================================================
# DATABASE SETTINGS (Optional)
# =============================================================================

# PostgreSQL (for data persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/neuromarketing
# ENABLE_DATABASE_LOGGING=false

# Redis (for caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_TIMEOUT=5

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# AWS Settings
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET_NAME=neuromarketing-exports

# Google Cloud Settings
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Settings
# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug settings (only for development)
# DEBUG=false
# ENABLE_DEBUG_LOGGING=false
# ENABLE_PROFILING=false

# Test settings
# ENABLE_TEST_MODE=false
# MOCK_API_RESPONSES=false

# Development server
# AUTO_RELOAD=true
# ENABLE_HOT_RELOAD=true

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================

# Multi-tenancy
# ENABLE_MULTI_TENANCY=false
# DEFAULT_TENANT_ID=default

# User authentication
# ENABLE_USER_AUTH=false
# AUTH_PROVIDER=local
# JWT_SECRET_KEY=your-jwt-secret-key

# Audit logging
# ENABLE_AUDIT_LOGGING=false
# AUDIT_LOG_ENDPOINT=

# Backup settings
# ENABLE_AUTO_BACKUP=false
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ENABLE_EMAIL_NOTIFICATIONS=false

# Slack notifications
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# ENABLE_SLACK_NOTIFICATIONS=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Webhook endpoints
# WEBHOOK_ENDPOINT=https://your-domain.com/webhooks
# WEBHOOK_SECRET=your-webhook-secret

# External API integrations
# ENABLE_EXTERNAL_APIS=true
# API_TIMEOUT=30

# Third-party services
# ENABLE_THIRD_PARTY_INTEGRATIONS=false

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Note: Lines starting with # are comments and will be ignored
# Remove the # at the beginning of any line to activate that setting
# Make sure to restart the application after changing this file